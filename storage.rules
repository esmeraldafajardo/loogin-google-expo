rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /retailer_logos/{allPaths=**}{
      allow read;
      allow write : if request.auth!=null  && request.auth.token.role in ["superadmin","admin","developer"] && request.resource.contentType.matches('image/.*');
    }
    match /labels {
      allow read, write: if request.auth!=null;
    }
    match /labels/{allPaths=**} {
      allow read, write: if request.auth!=null;
    }
    match /labels/{userId}/{allPaths=**}{
      allow read, write: if request.auth.uid == userId;
    }
    match /drivers {
      allow read, write: if request.auth!=null;
    }
    match /drivers/{allPaths=**} {
      allow read, write: if request.auth!=null && request.auth.token.role in ["admin"];
    }
    match /drivers/{userId}/{allPaths=**}{
      allow read, write: if (request.auth.uid == userId || request.auth.token.role in ["admin"]) && request.resource.contentType.matches('image/.*');
    }
  }
}